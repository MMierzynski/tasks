{% trans_default_domain 'FOSUserBundle' %}

<h1 class="text-center">Zarejestruj się</h1>
<hr>



{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register col-md-6 col-md-offset-3'}}) }}

    <div class="form-group">
        <label class="control-label">Email</label>
        {{ form_widget(form.email) }}
    </div>

    <div class="form-group">
        <label class="control-label">Login</label>
        {{ form_widget(form.username) }}
    </div>

    <div class="form-group">
        <label class="control-label">Hasło</label>
        {{ form_widget(form.plainPassword.first) }}
    </div>

    <div class="form-group">
        <label class="control-label">Potwierdź hasło</label>
        {{ form_widget(form.plainPassword.second) }}
    </div>


    <div>
        <input type="submit" class="btn btn-success" value="Zarejestruj" />
    </div>
{{ form_end(form) }}
