{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="text-center">
                    <a href="" class="btn btn-default">User</a>
                </div>
                <h2 class="text-center">Categories</h2>

                {{ form(addCategoryForm, {'attr': {'class': 'form-inline'}}) }}
                <br/>

                <ul class="categories">
                    {% for category in categories%}
                        <li><a href="{{ path('my_task_index', {'cid':category.id}) }}">{{ category.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-8">
                <h1 class="text-center">Today is {{ "now"|date("Y-m-d") }}</h1>
                {% if tasks is empty  %}
                    <h3 class="text-danger text-center">No task to show</h3>
                {% else %}
                    <h3 class="text-center">Upcoming tasks</h3>

                    {% for task in tasks %}

                        {% if date('now') >= date(task.expiresAt) %}
                            <div class="panel panel-danger">
                        {% else %}
                            <div class="panel panel-default">
                        {% endif %}

                            <div class="panel-body">
                                {% if date('now') >= date(task.expiresAt) %}
                                    <h4 class=""><a href="{{ path('my_task_show',{'id': task.id}) }}" class="text-danger">{{ task.title  }}</a> </h4>
                                    <h6 class="text-danger">{{ task.expiresAt| date('Y-m-d H:i') }}</h6>
                                {% else %}
                                    <h4 class=""><a href="{{ path('my_task_show',{'id': task.id}) }}">{{ task.title  }}</a></h4>
                                    <h6 class="text-muted">{{ task.expiresAt| date('Y-m-d H:i') }}</h6>
                                {% endif %}

                            </div>
                            <div class="panel-footer">
                                <a href="{{ path('my_task_edit',{'id': task.id}) }}" class="btn btn-default">Modify</a>
                            </div>
                        </div>

                    {% endfor %}

                {% endif %}
            </div>
        </div>
    </div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Add task
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title text-center" id="exampleModalLabel">Add new task</h3>
                </div>
                <div class="modal-body">
                    {{ form_start(addTaskForm) }}
                    {{ form_widget(addTaskForm) }}
                    <input type="submit" class="btn btn-default" name="add" value="Add task">
                    {{ form_end(addTaskForm) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}