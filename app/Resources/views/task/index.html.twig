{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-3 left-panel">
                <div class="user-panel row">
                    <a href="" class="btn btn-default col-md-8 username" disabled="disabled">{{ username }}</a>
                    <a href="{{ path('fos_user_security_logout') }}" class="logout btn btn-danger col-md-4" >Wyloguj</a>
                </div>
                <h2 class="text-center">Kategorie</h2>

                {{ form(addCategoryForm, {'attr': {'class': 'form-inline'}}) }}
                <br/>

                <ul class="categories">
                    <li><a href="{{ path('my_task_index') }}" class="btn btn-default btn-block btn-category">Wszystkie</a></li>

                    {% for category in categories%}
                        <li><a href="{{ path('my_task_index', {'cid':category.id}) }}" class="btn btn-default btn-block btn-category" style="border-left:3px solid {{ category.color }};">{{ category.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-9 right-panel">

                <div class="top-bar "
                {% if selectedCategory is not empty  %}
                    style="background-color: {{ selectedCategory.color }}B3"
                {% endif %}
                >
                    <div class="top-bar-bg"></div>

                    {% if categories is not empty %}
                        <button type="button" class="btn btn-primary pull-left" data-toggle="modal" data-target="#exampleModal">
                            <span class="glyphicon glyphicon-plus-sign"></span>
                            Dodaj zadanie
                        </button>
                    {% endif %}
                    <h4 class="text-right">Dzisiaj jest: {{ "now"|date("Y-m-d") }}</h4>
                        {% if selectedCategory is not empty %}
                            <h4 class="text-center text-muted">Kategoria</h4>
                            <h1 class="text-center">{{ selectedCategory.name }}</h1>
                        {% else %}
                            <h4 class="text-center text-muted">Witaj!</h4>
                            <h1 class="text-center">Co masz dzisiaj w planach?</h1>
                        {% endif %}


                    {% if selectedCategory is not empty %}
                        <a href="" class="btn btn-default pull-right"><span class="glyphicon glyphicon-edit"></span> Edytuj</a>
                        <br/>
                        <hr class="clearfix" style="border-top: 1px solid {{ selectedCategory.color }}"/>
                    {% else %}
                        <hr/>
                    {% endif %}

                    {% if tasks is empty  %}
                        <h3 class="text-danger text-center">Brak zadań do wyświetlenia</h3>
                    {% else %}
                        <h3 class="text-center text-muted">Zadania do wykonania</h3>
                    {% endif %}

                    </div>
                <div class="task-grid">
                {% if tasks is not empty %}
                    {% set cntr = 0 %}
                    {% for task in tasks %}

                        {% if date('now') >= date(task.expiresAt) %}
                            <div class="panel panel-danger col-md-6 task-panel">
                        {% else %}
                            <div class="panel panel-default col-md-6 task-panel">
                        {% endif %}

                            <div class="panel-body">
                                {% if date('now') >= date(task.expiresAt) %}
                                    <h4 class=""><a href="{{ path('my_task_show',{'id': task.id}) }}" class="text-danger">{{ task.title  }}</a> </h4>
                                    <h6 class="text-danger">{{ task.expiresAt| date('Y-m-d H:i') }}</h6>
                                {% else %}
                                    <h4 class=""><a href="{{ path('my_task_show',{'id': task.id}) }}">{{ task.title  }}</a></h4>
                                    <h6 class="text-muted">{{ task.expiresAt| date('Y-m-d H:i') }}</h6>
                                {% endif %}

                            </div>
                            <div class="panel-footer">
                                <a href="{{ path('my_task_edit',{'id': task.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Edytuj</a>
                            </div>
                        </div>
                        {% set cntr = cntr+1 %}
                    {% endfor %}

                {% endif %}
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title text-center" id="exampleModalLabel">Dodaj nowe zadanie</h3>
                </div>
                <div class="modal-body">
                    {{ form_start(addTaskForm) }}
                    {{ form_widget(addTaskForm) }}
                    <input type="submit" name="save" class="btn btn-default" value="Dodaj" />
                    {{ form_end(addTaskForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}