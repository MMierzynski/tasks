{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center{% if date('now')>=date(task.expiresAt)%} text-danger{% endif %}">{{ task.title }}</h1>
        <hr>
        <h5 class="text-muted text-center">Expires at: {{ task.expiresAt| date('Y-m-d H:i') }}</h5>

        <h4 class="text-center">Description</h4>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <p>{{ task.description }}</p>
            </div>
        </div>

        <hr>
        <div class="row">
            <div class="col-md-4 col-md-offset-1">
                <h5 class="text-muted text-center">Created at: {{ task.createdAt| date('Y-m-d H:i') }}</h5>
            </div>
            <div class="col-md-4 col-md-offset-2">
                <h5 class="text-muted text-center">Last modified at: {{ task.updatedAt| date('Y-m-d H:i') }}</h5>
            </div>
        </div>
        <hr>
        <div>
            {{ form(doneForm) }}
            {{ form(deleteForm) }}
        </div>
    </div>


{% endblock %}